<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIconHouse"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/txtNameHouse"
        android:layout_toRightOf="@+id/imgIconHouse"
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtStatusOrder"
        android:text="Test"
        android:layout_toRightOf="@+id/imgIconHouse"
        android:layout_below="@+id/txtNameHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDateOrder"
        android:layout_toRightOf="@+id/imgIconHouse"
        android:layout_below="@+id/txtStatusOrder"
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtPriceOrder"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>