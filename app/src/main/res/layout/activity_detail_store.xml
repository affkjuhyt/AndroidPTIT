<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".DetailStore">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/relaAddress"
        android:layout_width="match_parent"
        android:layout_height="65dp" >
        <ImageView
            android:id="@+id/imgCancelStore"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cancel"/>
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Nguyen Van Loc"
            android:layout_toRightOf="@+id/imgCancelStore"
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
        android:layout_below="@+id/relaAddress"
        android:id="@+id/imgStore"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <fragment
        android:layout_marginTop="20dp"
        android:id="@+id/map"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_below="@+id/imgStore"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/map"
        android:id="@+id/txtAddressDetail"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="38 Nguyen Khuyen"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtAddressDetail"
        android:id="@+id/relaDetailOpen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/txtDetal"
            android:text="Chi tiết"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_below="@+id/txtDetal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/txtPhone"
                android:text="Liên hệ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/txtPhone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/phoneNumber"
                android:text="02871087088"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>